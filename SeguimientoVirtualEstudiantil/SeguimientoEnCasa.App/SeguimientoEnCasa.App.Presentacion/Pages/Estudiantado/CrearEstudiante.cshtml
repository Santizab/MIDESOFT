@{
}
<h2>Creacion de Nuevo Estudiante</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Estudiante.Nombre"></label>
        <input asp-for="Estudiante.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="Estudiante.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estudiante.Apellidos"></label>
        <input asp-for="Estudiante.Apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="Estudiante.Apellidos"></span>
    </div>
    <div class="form-group">
        <label>Numero De Telefono</label>
        <input asp-for="Estudiante.NumeroTelefono" class="form-control">
        <span class="text-danger" asp-validation-for="Estudiante.NumeroTelefono"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estudiante.Genero"></label>
        <select asp-for="Estudiante.Genero" asp-items="Html.GetEnumSelectList<Genero>()" class="form-control"></select>
        <span class="text-danger" asp-validation-for="Estudiante.Apellidos"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estudiante.Direccion"></label>
        <input asp-for="Estudiante.Direccion" class="form-control">
        <span class="text-danger" asp-validation-for="Estudiante.Direccion"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estudiante.Latitud"></label>
        <input asp-for="Estudiante.Latitud" class="form-control">
        <span class="text-danger" asp-validation-for="Estudiante.Latitud"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estudiante.Longitud"></label>
        <input asp-for="Estudiante.Longitud" class="form-control">
        <span class="text-danger" asp-validation-for="Estudiante.Longitud"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estudiante.Ciudad"></label>
        <input asp-for="Estudiante.Ciudad" class="form-control">
        <span class="text-danger" asp-validation-for="Estudiante.Ciudad"></span>
    </div>
    <div class="form-group">
        <label>Fecha De Nacimiento</label>
        <input type="date" asp-for="Estudiante.FechaDeNacimiento">
        <span class="text-danger" asp-validation-for="Estudiante.FechaDeNacimiento"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estudiante.Acudiente"></label>
