            @Html.ValidationMessageFor(x => x.Tutor.Nombre, "", new { @class = "text-danger" })
        </div> *@
    </div>
    <div class="form-group">
        <label asp-for="Estudiante.Maestro"></label>
        @* <div class="col-md-5">
