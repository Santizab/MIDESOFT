@page
@using SeguimientoEnCasa.App.Dominio
@model SeguimientoEnCasa.App.Presentacion.Pages.Estudiantado.CrearAcudienteModel
@{
}
<h2>Edición de Acudiente</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Acudiente.Nombre"></label>
        <input asp-for="Acudiente.Nombre" class="form-control">
        <span class="text-danger" asp-validation-for="Acudiente.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Acudiente.Apellidos"></label>
        <input asp-for="Acudiente.Apellidos" class="form-control">
        <span class="text-danger" asp-validation-for="Acudiente.Apellidos"></span>
    </div>
    <div class="form-group">
        <label>Numero De Telefono</label>
        <input asp-for="Acudiente.NumeroTelefono" class="form-control">
        <span class="text-danger" asp-validation-for="Acudiente.NumeroTelefono"></span>
    </div>
    <div class="form-group">
        <label asp-for="Acudiente.Genero"></label>
        <select asp-for="Acudiente.Genero" asp-items="Html.GetEnumSelectList<Genero>()" class="form-control"></select>
        <span class="text-danger" asp-validation-for="Acudiente.Genero"></span>
    </div>
    <div class="form-group">
        <label asp-for="Acudiente.Parentesco"></label>
        <input asp-for="Acudiente.Parentesco" class="form-control">
        <span class="text-danger" asp-validation-for="Acudiente.Parentesco"></span>
    </div>
    <div class="form-group">
        <label asp-for="Acudiente.Correo"></label>
        <input asp-for="Acudiente.Correo" class="form-control">
        <span class="text-danger" asp-validation-for="Acudiente.Correo"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Grabar</button>
</form>

<a asp-page="./Estudiante" class="btn-default">Lista de Estudiantes </a>