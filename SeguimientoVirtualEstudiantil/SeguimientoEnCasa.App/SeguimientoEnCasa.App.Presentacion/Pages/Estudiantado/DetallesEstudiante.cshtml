@page
@model SeguimientoEnCasa.App.Presentacion.Pages.Estudiantado.DetallesEstudianteModel
@{
}
<h2>@Model.Estudiante.Nombre</h2>
<div>
    Id: @Model.Estudiante.Id
</div>
<div>
    Nombre: @Model.Estudiante.Nombre
</div>
<div>
    Apellidos: @Model.Estudiante.Apellidos
</div>
<div>
    Numero de Telefono: @Model.Estudiante.NumeroTelefono
</div>
<div>
    Genero: @Model.Estudiante.Genero
</div>
<div>
    Direccion: @Model.Estudiante.Direccion
</div>
<div>
    Latitud: @Model.Estudiante.Latitud
</div>
<div>
    Longitud: @Model.Estudiante.Longitud
</div>
<div>
    Ciudad: @Model.Estudiante.Ciudad
</div>
<div>
    FechaDeNacimiento: @Model.Estudiante.FechaDeNacimiento
</div>
<div>
    Acudiente: 
    @if(Model.Estudiante.AcudienteList==null)
    {
        <a class="btndetalle" asp-page="./CrearAcudiente" asp-route-IdEstudiante="@Model.Estudiante.Id">
        Crear Acudiente
        </a>
    }
    else
    @Model.Estudiante.AcudienteList[0].Nombre
</div>
